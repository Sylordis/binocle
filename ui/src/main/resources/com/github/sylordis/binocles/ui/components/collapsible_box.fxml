<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root styleClass="comment-box" type="VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="boxTitleContainer" alignment="CENTER_LEFT" styleClass="">
         <children>
            <Button fx:id="buttonCollapse" contentDisplay="GRAPHIC_ONLY" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" onAction="#toggleExpanded" prefHeight="20.0" prefWidth="20.0" text="Expand or Collapse" HBox.hgrow="NEVER">
               <styleClass>
                 <String fx:value="collapse-button" />
                 <String fx:value="buttonicon" />
                 <String fx:value="mixed-bg" />
               </styleClass>
               <graphic>
                  <ImageView fitHeight="8.0" fitWidth="8.0" preserveRatio="true">
                     <image>
                        <Image url="@../img/down_arrow.png" />
                     </image>
                     <styleClass>
                        <String fx:value="icon" />
                        <String fx:value="icon-small" />
                     </styleClass>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Collapse/expand" />
               </tooltip>
            </Button>
            <Text fx:id="boxTitle" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Title" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox fx:id="toolbar" styleClass="toolbar">
               <children>
                  <Button fx:id="buttonEdit" contentDisplay="GRAPHIC_ONLY" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" onAction="#editAction" prefHeight="20.0" prefWidth="20.0" text="Edit">
                     <styleClass>
                        <String fx:value="edit-button" />
                        <String fx:value="buttonicon" />
                	 	<String fx:value="mixed-bg" />
                     </styleClass>
                     <graphic>
                        <ImageView fitHeight="12.0" fitWidth="12.0" opacity="0.75" preserveRatio="true">
                           <image>
                              <Image url="@../img/pencil.png" />
                           </image>
                           <styleClass>
                              <String fx:value="icon" />
                              <String fx:value="icon-small" />
                           </styleClass>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Edit this comment" />
                     </tooltip>
                  </Button>
                  <Button fx:id="buttonDelete" contentDisplay="GRAPHIC_ONLY" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" onAction="#deleteAction" prefHeight="20.0" prefWidth="20.0" text="Delete">
                     <styleClass>
                        <String fx:value="delete-button" />
                        <String fx:value="buttonicon" />
                        <String fx:value="mixed-bg" />
                     </styleClass>
                     <graphic>
                        <ImageView fitHeight="12.0" fitWidth="12.0" preserveRatio="true">
                           <image>
                              <Image url="@../img/trash.png" />
                           </image>
                           <styleClass>
                              <String fx:value="icon" />
                              <String fx:value="icon-small" />
                           </styleClass>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Delete this comment" />
                     </tooltip>
                  </Button>
               </children></HBox>
         </children>
      </HBox>
      <VBox fx:id="mainContent" styleClass="comment-box-inner" />
   </children>
</fx:root>
