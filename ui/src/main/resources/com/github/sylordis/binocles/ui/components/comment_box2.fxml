<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<fx:root styleClass="comment-box" type="VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="boxTitleContainer" alignment="CENTER_LEFT" styleClass="">
         <children>
            <Button fx:id="buttonCollapse" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefWidth="16.0" text="Expand or Collapse" HBox.hgrow="NEVER" onAction="#toggleExpanded">
               <styleClass>
                 <String fx:value="comment-box-collapse"/>
                 <String fx:value="buttonicon"/>
               </styleClass>
               <graphic>
                  <ImageView fitHeight="8.0" fitWidth="8.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/down_arrow.png" />
                     </image>
                     <styleClass>
                        <String fx:value="icon" />
                        <String fx:value="icon-small" />
                     </styleClass>
                  </ImageView>
               </graphic>
            </Button>
            <Text fx:id="boxTitle" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="comment-box-title" text="Title" />
            <Region />
            <HBox fx:id="toolbar"/>
         </children>
      </HBox>
      <VBox fx:id="mainContent" styleClass="comment-box-inner"/>
   </children>
</fx:root>
